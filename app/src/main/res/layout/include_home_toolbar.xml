<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="match_parent"
  android:background="@mipmap/ic_heiban"
             android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="85dp"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/barTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:shadowColor="#c5000000"
            android:shadowDx="-5"
            android:shadowDy="-3"
            android:shadowRadius="10"
            android:text="你可以对我说"
            android:textSize="44sp"/>

        <TextView
            android:id="@+id/barSubtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_marginTop="2dp"
            android:shadowColor="#c5000000"
            android:shadowDx="-5"
            android:shadowDy="-3"
            android:shadowRadius="10"
            android:text="“带我去讯飞展厅”"
            android:textColor="#6dd709"
            android:textSize="27sp"/>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/btnBack"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:elevation="10dp"
            android:background="@drawable/bg_ripple_cyan"
            android:clickable="true"
            android:padding="25dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@mipmap/ic_home"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/btnFunc"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:elevation="10dp"
            android:layout_alignParentRight="true"
            android:animateLayoutChanges="true"
            android:background="@drawable/bg_ripple_orange"
            android:clickable="true"
            android:padding="25dp"
            android:visibility="invisible">

            <ImageView
                android:id="@+id/btnFuncIcon"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@mipmap/ic_ensure"/>

        </LinearLayout>
    </RelativeLayout>

</FrameLayout>
