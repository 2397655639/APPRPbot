<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
  android:background="@mipmap/bg_black"
    tools:activity="com.starway.starrobot.activity.backstage.PasswordEditActivity">

    <include layout="@layout/include_backstage_toolbar"/>


  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <LinearLayout
      android:layout_width="750dp"
      android:layout_height="wrap_content"
      android:gravity="center_vertical"
      android:layout_marginBottom="10dp">

      <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/password_input_head"
        android:textSize="22dp"/>

      <TextView
        android:id="@+id/show_pas"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:padding="10dp"
        android:textColor="#d1fa5e"
        android:gravity="center"
        android:textSize="30dp"/>

      <Button
        android:id="@+id/rollback"
        android:layout_width="50dp"
        android:layout_height="35dp"
        android:background="@drawable/btn_delete"
        android:textColor="#ffff"/>

    </LinearLayout>


    <RelativeLayout
      android:layout_width="800dp"
      android:layout_height="480dp"
      android:background="@mipmap/bg_screenshot"
      android:padding="20dp">

      <Button
        android:id="@+id/btn_1"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:alpha="0.5"
        android:background="@drawable/bg_ripple_green"
        android:text="A"
        android:textColor="#FFFFFF"
        android:textSize="30dp"/>

      <Button
        android:id="@+id/btn_2"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:alpha="0.5"
        android:background="@drawable/bg_ripple_green"
        android:text="B"
        android:textColor="#FFFFFF"
        android:textSize="30dp"/>

      <Button
        android:id="@+id/btn_3"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:alpha="0.5"
        android:background="@drawable/bg_ripple_green"
        android:text="C"
        android:textColor="#FFFFFF"
        android:textSize="30dp"/>

      <Button
        android:id="@+id/btn_4"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:alpha="0.5"
        android:background="@drawable/bg_ripple_green"
        android:text="D"
        android:textColor="#FFFFFF"
        android:textSize="30dp"/>

    </RelativeLayout>

    <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="10dp"
      android:text="@string/password_tip"
      android:textColor="#95ffffff"
      android:textSize="16sp"/>

  </LinearLayout>


</LinearLayout>
